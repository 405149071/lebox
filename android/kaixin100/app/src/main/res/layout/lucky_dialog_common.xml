<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_rect_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="恭喜您获得"
            android:textColor="@color/mgc_sdk_lucky_dialog_red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="iphonX"
            android:textColor="@color/mgc_sdk_lucky_dialog_black"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="请至我的奖品查看"
            android:textColor="@color/mgc_sdk_lucky_dialog_hint"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_wxno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:drawableStart="@mipmap/lucky_dialog_wx"
            android:drawablePadding="4dp"
            android:text="123456678"
            android:textColor="@color/mgc_sdk_lucky_dialog_hint"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="@dimen/match_20">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_button_cancel"
                android:textColor="@color/mgc_sdk_lucky_dialog_btn_left"
                android:background="@drawable/lucky_dialog_btn_left"
                android:layout_marginEnd="@dimen/match_20"
                />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_button_ok"
                android:textColor="@color/white"
                android:background="@drawable/lucky_dialog_btn_right"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>