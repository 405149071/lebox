<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_size_16sp"
        android:text="每日签到"
        android:textStyle="bold"
        android:textColor="@color/mgc_sdk_black_3"

        />

    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_2"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/day_1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_3"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/day_2"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/day_3"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_5"
            android:layout_below="@id/day_1"
            android:layout_marginTop="@dimen/match_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/day_5"
            android:layout_below="@id/day_2"
            android:layout_marginTop="@dimen/match_10"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <com.mgc.letobox.happy.ui.signin.SignInItem
            android:id="@+id/day_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/day_6"
            android:layout_below="@id/day_3"
            android:layout_marginTop="@dimen/match_10"
            android:layout_marginStart="8dp"
            android:layout_weight="2"/>

    </RelativeLayout>
