<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_rect_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/match_20"
            android:background="@null"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal"
            />

        <LinearLayout
            android:id="@+id/layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/match_20">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_button_cancel"
                android:textColor="@color/text_gray"
                android:background="@drawable/dialog_btn_blue_deep"
                />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_button_ok"
                android:textColor="@color/white"
                android:background="@drawable/dialog_btn_white_with_blue_stroke"
                android:layout_marginStart="@dimen/match_20"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>