<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/rl_bill_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/match_10"
        android:layout_marginBottom="@dimen/match_10"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:maxLines="1"
            android:text="10:30"
            android:textColor="#dcfffb"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_toRightOf="@id/tv_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="10:30"
            android:textColor="#dcfffb"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp">

            <TextView
                android:id="@+id/btn_draw"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/lucky_history_btn"
                android:gravity="center"
                android:text="领取"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="本月"
        android:textColor="#dcfffb"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>
