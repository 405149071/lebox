<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_common_title_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/match_20"
        android:layout_marginEnd="@dimen/match_20">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/divider_color_c7" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="@dimen/match_10"
            android:text="微信提现需要绑定我们微信公众号，请参考以下教程："
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="@dimen/match_10"
            android:text="方法一：点击保存图中二维码 - 打开微信扫-扫 - 扫描保存的二维码图片"
            android:textColor="@color/text_black"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/ll_qrcode"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/match_10"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/gzh_qrcode"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="@dimen/match_10"
            android:background="@color/divider_color_c7" />


        <TextView
            android:id="@+id/tv_methord2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/match_10"
            android:gravity="left"
            android:text="方法二：打开微信右上角+号 - 添加好友 - 在微信公众号搜索-在搜索框中输入 jiujiuledong - 点击关注"
            android:textColor="@color/text_black"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>