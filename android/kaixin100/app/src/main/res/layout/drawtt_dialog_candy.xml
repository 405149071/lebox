<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:background="#9933ff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="恭喜您获得"
            android:textColor="#fcfb0a"
            android:textSize="22sp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10糖果"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="请至我的奖品查看"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="@dimen/match_20">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="稍后查看"
                android:textColor="@color/white"
                android:background="@mipmap/drawtt_left"
                android:layout_marginEnd="@dimen/match_20"
                />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查看奖品"
                android:textColor="@color/white"
                android:background="@mipmap/drawtt_right"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>