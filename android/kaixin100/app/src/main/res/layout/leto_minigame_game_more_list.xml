<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mgc_sdk_white"
    android:orientation="vertical"
    android:paddingEnd="4dp"
    android:paddingStart="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_cover"
            android:layout_width="72dp"
            android:layout_height="77dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical">

            <com.ledong.lib.minigame.view.RoundedImageView
                android:id="@+id/iv_game_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                app:riv_corner_radius="13dp"
                app:riv_mutate_background="false"
                app:riv_oval="false" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="22dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/leto_minigame_hot"
                android:gravity="center"
                android:textColor="@color/mgc_sdk_white"
                android:textSize="10sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/rl_cover"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_PaiHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1"
                    android:textColor="@color/mgc_sdk_text_blacks"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="英雄联盟"
                        android:textColor="@color/mgc_sdk_text_blacks"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_game_Fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/leto_minigame_xing"
                        android:drawablePadding="2dp"
                        android:text="0.0"
                        android:textColor="@color/mgc_sdk_bg_blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_game_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="90dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="全球最好玩的手机游戏"
                        android:textColor="@color/mgc_sdk_text_lowgray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.ledong.lib.minigame.view.ProgressButton
                android:id="@+id/open_btn"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/leto_minigame_more_btn_bg"
                android:gravity="center"
                android:text="打开"
                android:textColor="@color/mgc_sdk_white"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="10dp"
        android:background="#eae9e9" />
</LinearLayout>